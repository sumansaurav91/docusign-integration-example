@model DocuSign.CodeExamples.Admin.Controllers.CreateCLMESignUser
@{
    int formNumber = 0;
    int userNameInputNumber = 0;
    int firstNameInputNumber = 1;
    int secondNameInputNumber = 2;
    int emailInputNumber = 3;
    int eSignPermissionInputNumber = 4;
    int clmPermissionInputNumber = 5;
    int groupInputNumber = 6;
}

<h4>2. @Html.Raw(ViewBag.CodeExampleText.ExampleName)</h4>
<p>
    @Html.Raw(ViewBag.CodeExampleText.ExampleDescription)
</p>

<partial name="../../../Views/Shared/LinkToMethodView" model="ViewBag.CodeExampleText" /> 
<p>
    @Html.Raw(
        @String.Format(
            ViewBag.SupportingTexts.ViewSourceFile, 
            "<a target='_blank' href=" + @ViewBag.source + ">CreateCLMESignUser.cs</a>"
        )
    )
</p>


<form class="eg" asp-action="Create" method="post" data-busy="form">
    <div class="form-group">
        <label for="UserName">
            @Html.Raw(ViewBag.CodeExampleText.Forms[formNumber].Inputs[userNameInputNumber].InputName)
        </label>

        <input type="text"
            class="form-control"
            name="UserName" 
            placeholder="@ViewBag.CodeExampleText.Forms[formNumber].Inputs[userNameInputNumber].InputPlaceholder" 
            required />
    </div>
    <div class="form-group">
        <label for="FirstName">
            @Html.Raw(ViewBag.CodeExampleText.Forms[formNumber].Inputs[firstNameInputNumber].InputName)
        </label>

        <input type="text" class="form-control" name="FirstName" 
            placeholder="@ViewBag.CodeExampleText.Forms[formNumber].Inputs[firstNameInputNumber].InputPlaceholder" required />
    </div>
    <div class="form-group">
        <label for="LastName">
            @Html.Raw(ViewBag.CodeExampleText.Forms[formNumber].Inputs[secondNameInputNumber].InputName)
        </label>

        <input type="text" class="form-control" name="LastName" 
            placeholder="@ViewBag.CodeExampleText.Forms[formNumber].Inputs[secondNameInputNumber].InputPlaceholder" required />
    </div>
    <div class="form-group">
        <label for="Email">
            @Html.Raw(ViewBag.CodeExampleText.Forms[formNumber].Inputs[emailInputNumber].InputName)
        </label>

        <input type="text" class="form-control" name="Email" 
            placeholder="@ViewBag.CodeExampleText.Forms[formNumber].Inputs[emailInputNumber].InputPlaceholder" required />

        <small id="emailHelp" class="form-text text-muted">
            @Html.Raw(ViewBag.SupportingTexts.HelpingTexts.EmailWontBeShared)
        </small>
    </div>
    <div class="form-group">
        <label for="ESignaturePermissionProfiles">
            @Html.Raw(ViewBag.CodeExampleText.Forms[formNumber].Inputs[eSignPermissionInputNumber].InputName)
        </label>

        @Html.DropDownList(
            "ESignPermissionProfileId", 
            new SelectList(ViewBag.ESignPermissionProfiles, "PermissionProfileId", "PermissionProfileName"), 
            new { @class = "form-control" }
        )
    </div>
    <div class="form-group">
        <label for="CLMPermissionhProfiles">
            @Html.Raw(ViewBag.CodeExampleText.Forms[formNumber].Inputs[clmPermissionInputNumber].InputName)
        </label>

        @Html.DropDownList(
            "CLMPermissionProfileId", 
            new SelectList(ViewBag.CLMPermissionProfiles, "PermissionProfileId", "PermissionProfileName"), 
            new { @class = "form-control" }
        )
    </div>
    <div class="form-group">
        <label for="DSGroups">
            @Html.Raw(ViewBag.CodeExampleText.Forms[formNumber].Inputs[groupInputNumber].InputName)
        </label>

        @Html.DropDownList(
            "DsGroupId", 
            new SelectList(ViewBag.DsGroups, "DsGroupId", "GroupName"), 
            new { @class = "form-control" }
        )
    </div>
    <button type="submit" class="btn btn-primary">@Html.Raw(ViewBag.SupportingTexts.ContinueButton)</button>
</form>

